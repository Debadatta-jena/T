# ===========================================
# alwaysdata Production Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# ===========================================
# SERVER
# ===========================================
NODE_ENV=production
PORT=8080
API_PREFIX=api/v1

# ===========================================
# DATABASE (alwaysdata MySQL)
# ===========================================
# Get these from alwaysdata admin panel > Databases
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=your_alwaysdata_user
DB_PASSWORD=your_secure_password
DB_DATABASE=trionex_db

# ===========================================
# JWT SECURITY
# ===========================================
# Generate secure keys: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# EMAIL (Configure Gmail App Password)
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password
EMAIL_FROM=Trionex Technologies <your-email@gmail.com>

# ===========================================
# APPLICATION
# ===========================================
OWNER_EMAIL=debadattajena552@gmail.com
FRONTEND_URL=https://your-site.alwaysdata.net

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=https://your-site.alwaysdata.net

# ===========================================
# RATE LIMITING
# ===========================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100
