<!-- Splash Screen Placeholder - Replace with actual 1920x1080 PNG -->
<svg width="1920" height="1080" viewBox="0 0 1920 1080" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background with gradient -->
  <defs>
    <radialGradient id="splashGradient" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#1e40af;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2563eb;stop-opacity:1" />
    </radialGradient>
    <linearGradient id="textGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e0e7ff;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="1920" height="1080" fill="url(#splashGradient)" />
  
  <!-- Animated Neural Network Pattern -->
  <g opacity="0.1">
    <!-- Neural connections -->
    <line x1="200" y1="300" x2="400" y2="200" stroke="white" strokeWidth="1" opacity="0.3">
      <animate attributeName="x1" from="200" to="400" dur="3s" repeatCount="indefinite" />
      <animate attributeName="x2" from="400" to="600" dur="3s" repeatCount="indefinite" />
    </line>
    <line x1="600" y1="200" x2="800" y2="300" stroke="white" strokeWidth="1" opacity="0.3">
      <animate attributeName="x1" from="600" to="800" dur="3s" repeatCount="indefinite" />
      <animate attributeName="x2" from="800" to="1000" dur="3s" repeatCount="indefinite" />
    </line>
    <line x1="1000" y1="300" x2="1200" y2="200" stroke="white" strokeWidth="1" opacity="0.3">
      <animate attributeName="x1" from="1000" to="1200" dur="3s" repeatCount="indefinite" />
      <animate attributeName="x2" from="1200" to="1400" dur="3s" repeatCount="indefinite" />
    </line>
    <line x1="1400" y1="200" x2="1600" y2="300" stroke="white" strokeWidth="1" opacity="0.3">
      <animate attributeName="x1" from="1400" to="1600" dur="3s" repeatCount="indefinite" />
      <animate attributeName="x2" from="1600" to="1720" dur="3s" repeatCount="indefinite" />
    </line>
    
    <!-- Neural nodes -->
    <circle cx="200" cy="200" r="4" fill="white" opacity="0.5">
      <animate attributeName="opacity" values="0.5;0.8;0.5" dur="2s" repeatCount="indefinite" />
    </circle>
    <circle cx="400" cy="200" r="4" fill="white" opacity="0.5">
      <animate attributeName="opacity" values="0.5;0.8;0.5" dur="2s" begin="0.5s" repeatCount="indefinite" />
    </circle>
    <circle cx="600" cy="200" r="4" fill="white" opacity="0.5">
      <animate attributeName="opacity" values="0.5;0.8;0.5" dur="2s" begin="1s" repeatCount="indefinite" />
    </circle>
    <circle cx="800" cy="300" r="4" fill="white" opacity="0.5">
      <animate attributeName="opacity" values="0.5;0.8;0.5" dur="2s" begin="1.5s" repeatCount="indefinite" />
    </circle>
    <circle cx="1000" cy="300" r="4" fill="white" opacity="0.5">
      <animate attributeName="opacity" values="0.5;0.8;0.5" dur="2s" begin="2s" repeatCount="indefinite" />
    </circle>
    <circle cx="1200" cy="200" r="4" fill="white" opacity="0.5">
      <animate attributeName="opacity" values="0.5;0.8;0.5" dur="2s" begin="2.5s" repeatCount="indefinite" />
    </circle>
    <circle cx="1400" cy="300" r="4" fill="white" opacity="0.5">
      <animate attributeName="opacity" values="0.5;0.8;0.5" dur="2s" begin="3s" repeatCount="indefinite" />
    </circle>
    <circle cx="1600" cy="300" r="4" fill="white" opacity="0.5">
      <animate attributeName="opacity" values="0.5;0.8;0.5" dur="2s" begin="3.5s" repeatCount="indefinite" />
    </circle>
    <circle cx="1720" cy="300" r="4" fill="white" opacity="0.5">
      <animate attributeName="opacity" values="0.5;0.8;0.5" dur="2s" begin="4s" repeatCount="indefinite" />
    </circle>
  </g>
  
  <!-- Central Logo Area -->
  <g transform="translate(960, 400)">
    <!-- Logo Background Circle -->
    <circle cx="0" cy="0" r="80" fill="white" opacity="0.1" />
    
    <!-- AI Brain Icon -->
    <g transform="scale(2)">
      <!-- Brain shape -->
      <path d="M0 0 C15 -5, 30 0, 30 15 C30 22.5, 22.5 30, 0 15 C0 7.5, -7.5 0, 0 15 C0 0, 7.5 0, 0 0 Z" 
            fill="url(#logoGradient)" opacity="0.9">
        <animate attributeName="opacity" values="0;0.9;1" dur="1s" begin="0.5s" fill="freeze" />
      </path>
      
      <!-- Neural connections -->
      <g opacity="0.7">
        <circle cx="-7.5" cy="-7.5" r="3" fill="url(#logoGradient)" />
        <circle cx="7.5" cy="-7.5" r="3" fill="url(#logoGradient)" />
        <circle cx="0" cy="7.5" r="3" fill="url(#logoGradient)" />
        <circle cx="0" cy="-22.5" r="3" fill="url(#logoGradient)" />
        <circle cx="0" cy="22.5" r="3" fill="url(#logoGradient)" />
        
        <line x1="-7.5" y1="-7.5" x2="0" y2="-22.5" stroke="url(#logoGradient)" strokeWidth="2" />
        <line x1="7.5" y1="-7.5" x2="0" y2="-22.5" stroke="url(#logoGradient)" strokeWidth="2" />
        <line x1="-7.5" y1="-7.5" x2="0" y2="7.5" stroke="url(#logoGradient)" strokeWidth="2" />
        <line x1="7.5" y1="-7.5" x2="0" y2="7.5" stroke="url(#logoGradient)" strokeWidth="2" />
        <line x1="0" y1="-22.5" x2="0" y2="7.5" stroke="url(#logoGradient)" strokeWidth="2" />
        <line x1="0" y1="-22.5" x2="0" y2="22.5" stroke="url(#logoGradient)" strokeWidth="2" />
        <line x1="0" y1="-7.5" x2="0" y2="7.5" stroke="url(#logoGradient)" strokeWidth="2" />
      </g>
      
      <!-- Center detail -->
      <circle cx="0" cy="0" r="8" fill="white" opacity="0.9" />
      
      <!-- Animated dots -->
      <circle cx="-10" cy="-10" r="2" fill="white" opacity="0.8">
        <animate attributeName="opacity" values="0.8;0.3;0.8" dur="2s" repeatCount="indefinite" />
      </circle>
      <circle cx="10" cy="-10" r="2" fill="white" opacity="0.8">
        <animate attributeName="opacity" values="0.8;0.3;0.8" dur="2s" begin="0.5s" repeatCount="indefinite" />
      </circle>
      <circle cx="-10" cy="10" r="2" fill="white" opacity="0.8">
        <animate attributeName="opacity" values="0.8;0.3;0.8" dur="2s" begin="1s" repeatCount="indefinite" />
      </circle>
      <circle cx="10" cy="10" r="2" fill="white" opacity="0.8">
        <animate attributeName="opacity" values="0.8;0.3;0.8" dur="2s" begin="1.5s" repeatCount="indefinite" />
      </circle>
    </g>
  </g>
  
  <!-- Company Name -->
  <text x="960" y="550" font-family="Arial, sans-serif" font-size="48" font-weight="bold" fill="white" text-anchor="middle">
    AI Solutions
    <animate attributeName="opacity" values="0;1" dur="1s" begin="0.5s" fill="freeze" />
  </text>
  
  <!-- Tagline -->
  <text x="960" y="600" font-family="Arial, sans-serif" font-size="24" fill="white" text-anchor="middle" opacity="0.8">
    Transforming Ideas into Reality
    <animate attributeName="opacity" values="0;0.8" dur="1s" begin="1s" fill="freeze" />
  </text>
  
  <!-- Loading Progress Bar -->
  <g transform="translate(760, 700)">
    <rect x="0" y="0" width="400" height="4" rx="2" fill="white" opacity="0.2" />
    <rect x="0" y="0" width="200" height="4" rx="2" fill="url(#textGradient)">
      <animate attributeName="width" values="0;200" dur="2s" begin="1s" fill="freeze" />
    </rect>
  </g>
  
  <!-- Gradients -->
  <defs>
    <linearGradient id="logoGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e0e7ff;stop-opacity:1" />
    </linearGradient>
  </defs>
</svg>
